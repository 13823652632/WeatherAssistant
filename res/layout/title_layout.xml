<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/title_color" xmlns:tools="http://schemas.android.com/tools" tools:ignore="ContentDescription">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/title_font"
            android:textColor="@android:color/white"
            android:text="" />

        <ImageButton
            android:id="@+id/ibnHome"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin_or_padding"
            android:layout_marginStart="@dimen/normal_margin_or_padding"
            android:background="@drawable/home" />

        <ImageButton
            android:id="@+id/ibnRefresh"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin_or_padding"
            android:layout_marginEnd="@dimen/normal_margin_or_padding"
            android:background="@drawable/refersh" />

</RelativeLayout>
