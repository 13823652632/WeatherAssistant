<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_cyan"
    tools:context="com.weatherassistant.app.activities.WeatherActivity"
    tools:ignore="HardcodedText" >

    <include
        android:id="@+id/rlTitle"
        layout="@layout/title_layout" />

    <TextView
        android:id="@+id/tvPublishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/rlTitle"
        android:layout_marginTop="@dimen/normal_margin_or_padding"
        android:layout_marginRight="@dimen/normal_margin_or_padding"
        android:layout_marginEnd="@dimen/normal_margin_or_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_font"
        android:text="" />

    <LinearLayout
        android:id="@+id/llWeatherInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/big_height"
            android:gravity="center"
            android:textColor="@android:color/white"
        	android:textSize="@dimen/normal_font"
            android:text="" />

        <TextView
            android:id="@+id/tvWeatherDesp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bigger_height"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@android:color/white"
        	android:textSize="@dimen/big_font"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bigger_height"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/tvTemp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
        		android:textSize="@dimen/big_font"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
        		android:textSize="@dimen/big_font"
        		android:layout_marginLeft="@dimen/normal_margin_or_padding"
        		android:layout_marginRight="@dimen/normal_margin_or_padding"
                android:text="~" />

            <TextView
                android:id="@+id/tvTemp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
        		android:textSize="@dimen/big_font"
                android:text="" />

        </LinearLayout>

    </LinearLayout>
	
</RelativeLayout>
